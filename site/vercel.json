{
  "rewrites": [{ "source": "/(.*)", "destination": "/" }],
  "headers": [
    {
      "source": "/sitemap.xml",
      "headers": [{ "key": "Cache-Control", "value": "public, max-age=3600" }]
    },
    {
      "source": "/robots.txt",
      "headers": [{ "key": "Cache-Control", "value": "public, max-age=3600" }]
    }
  ],
  "functions": {
    "api/og/*.jsx": { "runtime": "edge" },
    "api/og/*.ts": { "runtime": "edge" },
    "api/og/*.tsx": { "runtime": "edge" }
  }
}
